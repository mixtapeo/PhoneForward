{
    "manifest_version": 2,
    "name": "PhoneForward",
    "version": "0.1",
  
    "description": "Send a highlighted phone number to your Android device.",
    "homepage_url": "https://github.com/mixtapeo/firefox-Phone",
  
    "icons": {
      "48": "icon48.png" 
    },
  
    "content_scripts": [
      {
        "matches": ["*://*/*"],
        "js": ["main.js"]
      }
      
    ],

    "browser_action": {
        "default_icon": "icon48.png",
        "default_title": "PhoneForward!",
        "default_popup": "popup.html"
      }
}
  